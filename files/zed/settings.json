// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "collaboration_panel": { "button": false },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "assistant": {
    "version": "2",
    "enabled": false,
    "button": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": null,
    "inline_blame": {
      "enabled": true
    }
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 18,
  "buffer_line_height": { "custom": 1.2 },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha (Blur)"
  },
  "buffer_font_family": "Iosevka",
  "buffer_font_weight": 400,
  "ui_font_family": "Noto Sans",
  "inlay_hints": {
    "enabled": false
  },
  "diagnostics": {
    "include_warnings": true
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-blur": true,
    "csharp": true,
    "gdscript": true,
    "git-firefly": true,
    "java": true,
    "lua": true,
    "toml": true,
    "zig": true
  },
  "experimental.theme_overrides": {
    "warning.background": "#232634",
    "error.background": "#232634",
    "hint.background": "#232634",
    "background": "#1e1e2ee7",
    "title_bar.background": "#1e1e2ef7",
    "surface.background": "#00000000",
    "tab.active_background": "#313244",
    "ghost_element.hover": "#3132447f",
    "ghost_element.selected": "#313244"
  },
  "chat_panel": {
    "button": false
  }
}
